# ===================================
# BLOCKSCOPE FRONTEND CONFIGURATION
# ===================================
# Copy this file to .env for development or .env.production for production
# All variables must be prefixed with VITE_ to be accessible in the app

# ===================================
# API CONFIGURATION
# ===================================
# Backend API base URL
VITE_API_BASE_URL=http://localhost:8000/api/v1

# API timeout (milliseconds)
VITE_API_TIMEOUT=30000

# Retry configuration
VITE_API_MAX_RETRIES=3
VITE_API_RETRY_DELAY=1000

# ===================================
# APPLICATION SETTINGS
# ===================================
VITE_APP_NAME=BlockScope
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Smart Contract Security Scanner
VITE_ENVIRONMENT=development

# ===================================
# FEATURE FLAGS
# ===================================
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_DARK_MODE=true
VITE_ENABLE_NOTIFICATIONS=true

# ===================================
# FILE UPLOAD SETTINGS
# ===================================
VITE_MAX_FILE_SIZE=5242880  # 5MB in bytes
VITE_ALLOWED_FILE_TYPES=.sol
VITE_MAX_FILES=1

# ===================================
# ANALYTICS (Optional)
# ===================================
VITE_GOOGLE_ANALYTICS_ID=
VITE_MIXPANEL_TOKEN=

# ===================================
# ERROR TRACKING (Optional)
# ===================================
VITE_SENTRY_DSN=
VITE_SENTRY_ENVIRONMENT=development

# ===================================
# UI CONFIGURATION
# ===================================
# Theme colors (optional override)
VITE_PRIMARY_COLOR=#3B82F6
VITE_SECONDARY_COLOR=#10B981

# Results per page
VITE_RESULTS_PER_PAGE=10

# Auto-refresh interval (milliseconds, 0 to disable)
VITE_AUTO_REFRESH_INTERVAL=0

# ===================================
# BLOCKCHAIN CONFIGURATION (Optional)
# ===================================
# For future on-chain verification features
VITE_ETH_CHAIN_ID=1
VITE_POLYGON_CHAIN_ID=137
VITE_BSC_CHAIN_ID=56

# ===================================
# DEVELOPMENT TOOLS
# ===================================
# Show debug info in console
VITE_DEBUG_MODE=true

# Mock API responses (for development without backend)
VITE_USE_MOCK_API=false

# ===================================
# DOCUMENTATION
# ===================================
VITE_DOCS_URL=https://docs.blockscope.io
VITE_SUPPORT_EMAIL=support@blockscope.io
VITE_GITHUB_URL=https://github.com/bagman00/blockscope-scanner
